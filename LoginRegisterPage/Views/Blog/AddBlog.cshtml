@model MvcBlog.Entities.BlogModel

<!DOCTYPE html>
<html lang="en">

<body>

    <div class="container">
        <h2>Yeni Blog Ekle</h2>

        <form asp-action="AddBlog" method="post">
            <div class="form-group">
                <label asp-for="Baslik">Başlık:</label>
                <input asp-for="Baslik" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Icerik">İçerik:</label>
                <textarea asp-for="Icerik" class="form-control" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>

</body>
</html>
