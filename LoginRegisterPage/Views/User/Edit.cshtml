
@model EditUserModel
@{
    ViewData["Title"] = "Edit User";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2"> @ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
               <div class="form-group mb-3">

                <label asp-for="NameSurname" class="form-label">Fullname</label>
                <input asp-for="NameSurname" class="form-control" placeholder="UserName" />
                <span asp-validation-for="NameSurname" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">

                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="UserName" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            
            
               <div class="form-group mb-3">

                <label asp-for="Role" class="form-label">Rol</label>
               
                <select asp-for="Role" class="form-control">
                    <option value="">Please Select</option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>

                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Locked">
                    <label class="form-check-label" asp-for="Locked">
                       Locked
                    </label>
                </div>
            </div>


            <div class="form-group d-grid mb-3">
                <button type="submit" class=" btn btn-primary"><i class="fa-solid fa-save me-2"></i>Save</button>
            </div>
        </form>
    </div>
</div>