@model List<UserModel>
@{
    ViewData["Title"] = "Users";
}


<div class="row">
    <div class="col">
     <h1 class="display-4">@ViewData["Title"]</h1>
     <hr />
  
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2">New User</i></a>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <table class= "table table-hover table-sm">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Username</th>
                    <th>Locked</th>
                    <th>Role</th>
                    <th>Created At</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(UserModel user in Model)
                {
                   <tr>
                        <td>@user.NameSurname</td>
                        <td>@user.UserName</td>
                        <td>@if (user.Locked)
                            {
                                <i class="fa fa-check text-succes"></i>
                            }
                            else
                            {
                                <i class="fa fa-check text-danger"></i>
                                
                            }
                        </td>
                        <td>@user.Role</td>
                        <td>@user.CreatedAt</td>
                        <td>@user.CreatedAt</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"> Edit</i></a>
                            <a asp-action="Delete" asp-route-id="@user.Id"
                            onclick="return confirm('Are you sure  want to delete this user: @user.UserName?')"
                            class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"> Remove</i></a>
                        </td>

                    </tr> 
                   
                }
            </tbody>
        </table>

    </div>
</div>